{
  "name": "wordpress-plugin/shayer-edu-essay-plugin",
  "description": "Plugin by Shayer Developer",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Shayer Developer",
      "email": "shayerdeveloper@gmail.com"
    }
  ],
  "scripts": {
    "phpcs": "phpcs --ignore=*/vendor/* --extensions=php --standard=PSR12 ./inc",
    "phpcbf": "phpcbf --ignore=*/vendor/* --extensions=php --standard=PSR12 ./inc",
    "phpmd": "phpmd ./ ansi codesize,unusedcode,naming --exclude vendor"
  },
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "ext-curl": "*",
    "symfony/dependency-injection": "^6.4",
    "symfony/config": "^6.4",
    "symfony/yaml": "^6.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.15"
  },
  "autoload": {
    "psr-4": {
      "Shayer\\EduEssayPlugin\\": "src"
    }
  }
}
